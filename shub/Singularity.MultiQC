Bootstrap: docker
From: ubuntu:20.04

%help
	"Quality Control"

%labels
	MAINTAINER "Guillermo Piccoli <grpiccoli@gmail.com>"
	SPECIES "Bluff Oyster"
	PROJECT "Flat Oyster Genomics"

%post
	apt-get clean && apt-get update
	
	#MultiQC
	DEBIAN_FRONTEND=noninteractive apt-get -yqq install python3-pip=20.0.2-5ubuntu1.1
	pip3 install -Iv multiqc==1.9

%runscript
	multiqc "$@"
